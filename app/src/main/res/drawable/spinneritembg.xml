<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/whitebox">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/whitebox" />
            <stroke android:color="@color/whitebox"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/eurogamer"/>
            <stroke android:color="@color/eurogamer_transparent" android:width="1dp"/>

        </shape>

    </item>
</ripple>