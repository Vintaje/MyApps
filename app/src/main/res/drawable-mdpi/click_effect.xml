<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/eurogamer">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/eurogamer" />
            <corners
                android:radius="11dp"   >
            </corners>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/whitebox"/>
            <stroke android:color="@color/eurogamer" android:width="1dp"/>
            <corners
                android:radius="11dp"   >
            </corners>

        </shape>

    </item>
</ripple>